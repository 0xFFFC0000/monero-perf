testnet=true
non-interactive=true
rpc-bind-ip=127.0.0.1
confirm-external-bind=true
# public-node=true
# restricted-rpc=true
allow-local-ip=true
no-zmq=true
no-igd=true
hide-my-port=true
disable-rpc-ban=true

###
# Log management
# 4 the most verbose
# 0 the least verbose
log-level=0
max-log-files=1
# 100MB for each log file
max-log-file-size=104850000

###
# Bandwidth management
limit-rate-down=262144
limit-rate-up=262144
out-peers=16384 # This will enable much faster sync and tx awareness; the default 8 is suboptimal nowadays
in-peers=16384 # The default is unlimited; we prefer to put a cap on this
max-concurrency=16384
max-connections-per-ip=65536
